<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add List"
            android:textSize="25dp"
            android:textColor="#FFF"
            android:layout_margin="@dimen/activity_vertical_margin"/>

    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_edittext_listname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="List name"
        app:met_floatingLabelTextSize="15dp"
        app:met_primaryColor="@color/colorPrimary"
        app:met_hideUnderline="true"
        android:hint="List name"
        android:layout_marginTop="10dp"
        android:layout_margin="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/dialog_add_list_cancel"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_close_black_24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            style="?android:attr/borderlessButtonStyle"/>


        <Button
            android:id="@+id/dialog_add_list_ok"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_done_black_24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>





</LinearLayout>