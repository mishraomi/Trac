<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/splashView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#484c98"
        pv:pv_background_color="#484c98"
        pv:pv_host_text="Trac"
        pv:pv_particle_text="2.0"
        pv:pv_particle_text_size="14sp"
        pv:pv_text_color="#FFF"
        pv:pv_text_anim_time="1000"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="2000"/>

</LinearLayout>